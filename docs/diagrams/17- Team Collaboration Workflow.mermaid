    P1 --> P2 --> P3 --> P4
    P4 --> D1 --> D2 --> D3 --> D4 --> D5
    D5 --> R1 --> R2 --> R3 --> R4
    R4 --> DP1 --> DP2 --> DP3 --> DP4
    
