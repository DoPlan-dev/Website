classDiagram
    class User {
        +uuid id
        +string email
        +integer total_xp
        +integer current_level
        +integer current_streak
        +timestamp last_active
        +getLevelProgress()
        +calculateNextLevelXP()
        +awardXP(amount)
    }
    
    class Achievement {
        +uuid id
        +string name
        +string category
        +integer xp_reward
        +json requirements
        +boolean is_secret
        +checkEligibility(user)
    }
    
    class UserAchievement {
        +uuid id
        +uuid user_id
        +uuid achievement_id
        +timestamp unlocked_at
        +json unlock_context
    }
    
    class Challenge {
        +uuid id
        +string title
        +string difficulty
        +integer reward_xp
        +timestamp start_date
        +timestamp end_date
        +json completion_criteria
        +validateCompletion(user)
    }
    
    class Reward {
        +uuid id
        +string type
        +string name
        +integer xp_cost
        +integer stock
        +boolean is_active
        +redeem(user)
    }
    
    User "1" -- "many" UserAchievement : unlocks
    Achievement "1" -- "many" UserAchievement : awarded_in
    User "1" -- "many" Challenge : participates
    User "1" -- "many" Reward : redeems